<definitions xmlns="http://ws.apache.org/ns/synapse">

    <sequence name="defaultFaultHandler">
        <!-- Logs and discards the message. -->
        <log level="full"/>    
        <drop/>
    </sequence>
    
    <proxy name="EmailProxy" transports="http,https" faultSequence="defaultFaultHandler">
        <target>
            <endpoint>
                <address uri="http://localhost:8080/axis2/services/Email"/>
            </endpoint>
            <outSequence>
                <send/>
            </outSequence>
        </target>
        <publishWSDL uri="http://localhost:8080/axis2/services/Email?wsdl"/>
    </proxy>
    
    <proxy name="HumanTaskProxy" transports="http,https" faultSequence="defaultFaultHandler">
        <target>
            <endpoint>
                <address uri="http://localhost:8080/axis2/services/HumanTask"/>
            </endpoint>
            <outSequence>
                <send/>
            </outSequence>
        </target>
        <publishWSDL uri="http://localhost:8080/axis2/services/HumanTask?wsdl"/>
    </proxy>
    
    <proxy name="ODEMonitorProxy" transports="http,https" faultSequence="defaultFaultHandler">
        <target>
            <endpoint>
                <address uri="http://localhost:8080/axis2/services/ODEMonitor"/>
            </endpoint>
            <outSequence>
                <send/>
            </outSequence>
        </target>
        <publishWSDL uri="http://localhost:8080/axis2/services/ODEMonitor?wsdl"/>
    </proxy>
    
    <proxy name="ODEManagementProxy" transports="http,https" faultSequence="defaultFaultHandler">
        <target>
            <endpoint>
                <address uri="http://localhost:8080/ode/processes/ProcessManagement"/>
            </endpoint>
            <outSequence>
                <send/>
            </outSequence>
        </target>
        <publishWSDL uri="http://localhost:8080/ode/processes/ProcessManagement?wsdl"/>
    </proxy>
    
    <!-- For securtiy reasons we reject all unexpected messages -->
    <sequence name="main">
        <drop/>
    </sequence>
</definitions>
