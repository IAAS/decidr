<?xml version="1.0" encoding="UTF-8"?>
<serviceGroup>
	<service name="ODEMonitor">
		<messageReceivers>
			<messageReceiver mep="http://www.w3.org/ns/wsdl/in-out"
				class="org.apache.axis2.rpc.receivers.RPCMessageReceiver" />
			<messageReceiver mep="http://www.w3.org/ns/wsdl/in-only"
				class="org.apache.axis2.rpc.receivers.RPCInOnlyMessageReceiver" />
		</messageReceivers>
		<parameter name="ServiceClass">
			de.decidr.odemonitor.service.ODEMonitorService
		</parameter>
		<parameter name="useOriginalwsdl">true</parameter>
		<parameter name="modifyUserWSDLPortAddress">true</parameter>
		<operation name="updateStats" mep="http://www.w3.org/ns/wsdl/in-out"
			namespace="http://decidr.de/webservices/ODEMonitor">
			<actionMapping>http://decidr.de/webservices/ODEMonitor/updateStats
			</actionMapping>
			<outputActionMapping>
				http://decidr.de/webservices/ODEMonitor/updateStatsResponse
			</outputActionMapping>
		</operation>
		<operation name="registerODE" mep="http://www.w3.org/ns/wsdl/in-out"
			namespace="http://decidr.de/webservices/ODEMonitor">
			<actionMapping>http://decidr.de/webservices/ODEMonitor/registerODE
			</actionMapping>
			<outputActionMapping>
				http://decidr.de/webservices/ODEMonitor/registerODEResponse
			</outputActionMapping>
		</operation>
		<operation name="getConfig" mep="http://www.w3.org/ns/wsdl/in-out"
			namespace="http://decidr.de/webservices/ODEMonitor">
			<actionMapping>http://decidr.de/webservices/ODEMonitor/getConfig
			</actionMapping>
			<outputActionMapping>
				http://decidr.de/webservices/ODEMonitor/getConfigResponse
			</outputActionMapping>
		</operation>
	</service>
</serviceGroup>
