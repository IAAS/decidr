<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <servlet>
  	<servlet-name>WebPortal</servlet-name>
  	<servlet-class>com.vaadin.terminal.gwt.server.ApplicationServlet
  	</servlet-class>
  	<init-param>
  		<param-name>application</param-name>
  		<param-value>de.decidr.ui.view.Main</param-value>
  	</init-param>
  	<init-param>
            <param-name>widgetset</param-name>
            <param-value>
                de.decidr.ui.gwt.ModelingToolWidgetSet</param-value>
    </init-param>  	
  </servlet>
  <servlet-mapping>
  	<servlet-name>WebPortal</servlet-name>
  	<url-pattern>/*</url-pattern>
  </servlet-mapping>
  <session-config>
  	<session-timeout>30</session-timeout>
  </session-config>
  <security-constraint>
		<display-name>Default Security Constraints</display-name>
		<web-resource-collection>
			<web-resource-name>Restricted Directory</web-resource-name>
			<url-pattern>/*</url-pattern>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
		<user-data-constraint>
			<transport-guarantee>NONE</transport-guarantee>
		</user-data-constraint>
</security-constraint>

  
</web-app>
